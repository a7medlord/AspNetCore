@model CloudApp.Models.BusinessModel.Instrument

@{
    ViewData["Title"] = "Create";
}

<div class="modal fade" id="mymodal" role="dialog" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit it</h4>
            </div>
            <div class="modal-body">
                
                

                <h2>Create</h2>

                <form asp-controller="Instruments" asp-action="Create">
                    <div class="form-horizontal">
                        <h4>Instrument</h4>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Amount" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="Amount" class="form-control" />
                                <span asp-validation-for="Amount" class="text-danger" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Area" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="Area" class="form-control" />
                                <span asp-validation-for="Area" class="text-danger" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="BDiscrib" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="BDiscrib" class="form-control" />
                                <span asp-validation-for="BDiscrib" class="text-danger" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Locat" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="Locat" class="form-control" />
                                <span asp-validation-for="Locat" class="text-danger" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="SNum" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="SNum" class="form-control" />
                                <span asp-validation-for="SNum" class="text-danger" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                </form>

               

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" onclick="ClosModal(this)">Close</button>

                <button type="button" class="btn btn-danger" onclick="SaveAndNew(this)">Save & New</button>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
