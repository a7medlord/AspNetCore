@model IEnumerable<CloudApp.Models.BusinessModel.Treatment>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Select_custmer" class="btn btn-primary">اضافه جديد</a>
</p>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading clearfix">
                <h3 class="panel-title"> المــعاملات</h3>
                <ul class="panel-tool-options">
                    <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                    <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                    <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
                </ul>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Custmer.Sample.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Custmer.Name)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Tbuild)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Owner)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.City)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Gada)
                                </th>
                                <th>
                                    
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Custmer.Sample.Name)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Custmer.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Tbuild)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Owner)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.City)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Gada)
                                    </td>               
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id"><i class="glyphicon glyphicon-edit text-primary"></i></a> &nbsp;&nbsp;
                                        <a asp-action="Details" asp-route-id="@item.Id"><i class="icon-eye text-primary"></i></a> &nbsp;&nbsp;
                                        <a asp-action="Delete" asp-route-id="@item.Id"><i class="icon-trash text-primary"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
